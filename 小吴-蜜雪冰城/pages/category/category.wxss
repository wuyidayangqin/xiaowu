.header {
    display: flex;
    /* border: 1px solid red; */
    width: 100%;
    padding: 0 25rpx;
    box-sizing: border-box;
    align-items: center;
    justify-content: space-between;
}

.header .search {
    width: 200rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    /* border: 1px solid red; */
    background-color: #f5f5f5;
    border-radius: 29rpx;
}

.header .search-input {
    /* border: 1px solid red; */
    width: 150rpx;
    height: 40rpx;
    background-color: #f5f5f5;
    padding: 0 5rpx;
    box-sizing: border-box;
    font-size: 28rpx;
    color: #d1d1d1;
}

/* 地图布局 */
.store-map {
    margin-top: 30rpx;
    width: 100%;
    transition: all 0.5s;
    position: relative;
}

.store-map .current-icon {
    width: 44rpx;
    height: 44rpx;
    position: absolute;
    right: 18rpx;
    bottom: 22rpx;
}

.collapse-area {
    /* border: 1px solid red; */
    width: 100%;
    height: 40rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 20rpx;
    color: #777777;
}

.collapse-area .icon {
    width: 30rpx;
    height: 30rpx;
    margin-left: 10rpx;
    /* border: 1px solid red; */
}

.store-list {
    /* border:  1px solid red; */
    width: 100%;

    box-sizing: border-box;
    background-color: #f8f8f8;
    transition: all 0.5s;
    /* padding: 25rpx; */
    /* border: 1px solid red; */
}

.store-list .store-box {
    /* border: 1px solid red; */
    background-color: #ffffff;
    padding: 25rpx;
    margin: 14rpx 25rpx;
    display: flex;
    align-items: center;
}

.store-list .store-box .info-area {
    flex: 1;
    border-right: 1rpx solid #eeeeee;
}

.store-list .store-box .info-area .name {
    font-size: 28rpx;
    font-weight: bold;
    margin-bottom: 12rpx;
}

.store-list .store-box .info-area .info {
    font-size: 18rpx;
    color: #777777;
    margin-bottom: 14rpx;

}

.store-list .store-box .info-area .tag {
    background-color: #E60012;
    font-size: 18rpx;
    color: #fff;
    padding: 6rpx;
    display: inline-block;
}

.store-list .store-box .location-area {
    width: 112rpx;
    margin-left: 25rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.store-list .store-box .location-area .action-area {
    display: flex;
    width: 110rpx;
    justify-content: space-around;

}

.store-list .store-box .location-area .distance {
    font-size: 20rpx;
    color: #777777;
    margin-bottom: 35rpx;
}

.store-list .store-box .location-area .action-area image {
    width: 40rpx;
    height: 40rpx;
}