.page {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: center;
    padding-top: 176rpx;
}

.logo {
    width: 150rpx;
    height: 150rpx;
    border-radius: 75rpx;
    overflow: hidden;
    margin-bottom: 22rpx;
}

.logo-title {
    margin-bottom: 160rpx;
}

.intro {
    font-size: 37rpx;
    font-weight: bold;
    margin-bottom: 84rpx;
}

.login-tip {
    font-size: 20rpx;
    color: #777777;
    margin-bottom: 14rpx;
}

.login-btn {
    width: 590rpx;
    height: 85rpx;
    background-color: #E60012;
    color: white;
    border-radius: 10rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-bottom: 42rpx;
}

.login-btn:active {
    opacity: 0.6;
}

.cancel {
    color: #aaaaaa;
}